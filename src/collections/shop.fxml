<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>

<Pane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
minWidth="-Infinity" prefHeight="400" prefWidth="800.0"
xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
fx:controller="collections.MainController">
    <children>
        <TableView fx:id="table" prefHeight="300" prefWidth="800.0">
            <columns>
                <TableColumn fx:id="Cname" prefWidth="100.0" resizable="false" text="Наименование" />
                <TableColumn fx:id="Cart" prefWidth="100.0" resizable="false" text="Артикул" />
                <TableColumn fx:id="Cmodel" prefWidth="100.0" resizable="false" text="Модель" />
                <TableColumn fx:id="Cproizvod" prefWidth="100" resizable="false" text="Производитель" />
                <TableColumn fx:id="Ccolor" prefWidth="100" resizable="false" text="Цвет" />
                <TableColumn fx:id="Csize" prefWidth="100" resizable="false" text="Размер" />
                <TableColumn fx:id="Cdate" prefWidth="100" resizable="false" text="Дата" />
                <TableColumn fx:id="Cprice" prefWidth="100" resizable="false" text="Цена" />
            </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
        </TableView>
      <Button fx:id="add" layoutX="720.0" layoutY="310.0" mnemonicParsing="false" onAction="#addItem" prefWidth="70.0" text="Добавить" />
      <Button fx:id="remove" layoutX="625.0" layoutY="370.0" mnemonicParsing="false" onAction="#remove" prefWidth="60.0" text="Удалить" />
      <Button fx:id="edit" layoutX="690.0" layoutY="370.0" mnemonicParsing="false" onAction="#edit" prefWidth="100.0" text="Редактировать" />
      <Button fx:id="sort" layoutX="460.0" layoutY="370.0" mnemonicParsing="false" onAction="#sort" prefWidth="160.0" text="Сортировать по размеру" />
      <Button fx:id="search" layoutX="165.0" layoutY="370.0" mnemonicParsing="false" onAction="#search" prefWidth="160.0" text="Поиск по наименованию" />
      <Button fx:id="reset" layoutX="405.0" layoutY="370.0" mnemonicParsing="false" onAction="#reset" prefWidth="50.0" text="Сброс" />
      <TextField fx:id="name" layoutX="25.0" layoutY="310.0" prefWidth="100.0" promptText="Наименование" />
      <TextField fx:id="art" layoutX="130.0" layoutY="310.0" prefWidth="80.0" promptText="Артикул" />
      <TextField fx:id="model" layoutX="215.0" layoutY="310.0" prefWidth="80.0" promptText="Модель" />
      <TextField fx:id="proizvod" layoutX="300.0" layoutY="310.0" prefWidth="100.0" promptText="Производитель" />
      <TextField fx:id="color" layoutX="405.0" layoutY="310.0" prefWidth="80.0" promptText="Цвет" />
      <TextField fx:id="size" layoutX="490.0" layoutY="310.0" prefHeight="25.0" prefWidth="60.0" promptText="Размер" />
      <TextField fx:id="date" layoutX="555.0" layoutY="310.0" prefHeight="25.0" prefWidth="80.0" promptText="Дата" />
      <TextField fx:id="price" layoutX="640.0" layoutY="310.0" prefWidth="60.0" promptText="Цена" />
      <TextField fx:id="find" layoutX="25.0" layoutY="370.0" prefWidth="130.0" promptText="Строка поиска" />
      <Label fx:id="info" layoutX="250.0" layoutY="340.0" prefHeight="25.0" prefWidth="300.0" />
    </children>
</Pane>
